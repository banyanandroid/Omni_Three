<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="0dp"
    android:background="@drawable/back_img"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prev_img"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:layout_marginBottom="52dp"
        android:src="@drawable/prev" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next_img"
        android:clickable="true"
        android:layout_alignTop="@+id/prev_img"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="54dp"
        android:layout_marginEnd="54dp"
        android:src="@drawable/next" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="12"
        android:layout_marginLeft="-40dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/text_no"
        android:layout_alignLeft="@+id/prev_img"
        android:layout_alignStart="@+id/prev_img"
        android:layout_alignBottom="@+id/prev_img"
        android:layout_alignTop="@+id/prev_img" />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:id="@+id/logo_img"
        android:src="@drawable/logo_img"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/logo_txt"
        android:layout_alignStart="@+id/logo_txt" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Energize mitochondria, vitalize cells"
        android:id="@+id/logo_txt"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@+id/logo_img"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frag_cap4"
    android:background="@color/white"
    tools:context=".Fragment_1">

    <include layout="@layout/cap_back"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Developed using patented \ntarget delivery system"
            android:id="@+id/textView64"
            android:gravity="end"
            android:textColor="@color/black"
            android:layout_marginLeft="164dp"
            android:layout_marginStart="164dp"
            android:layout_marginBottom="207dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView47"
            android:layout_marginTop="65dp"
            android:src="@drawable/cap4_omni_img"
            android:layout_alignTop="@+id/textView64"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="98dp"
            android:layout_marginStart="98dp"
            android:layout_toLeftOf="@+id/cap4_img"
            android:layout_toStartOf="@+id/cap4_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="(award winning technology)"
            android:id="@+id/textView65"
            android:textColor="@color/black"
            android:layout_below="@+id/imageView47"
            android:layout_alignRight="@+id/imageView47"
            android:layout_alignEnd="@+id/imageView47" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/cap4_img"
            android:clickable="true"
            android:layout_marginLeft="100dp"
            android:src="@drawable/cap4_img2"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="-40dp"
            android:layout_above="@+id/textView66"
            android:layout_toRightOf="@+id/textView64"
            android:layout_toEndOf="@+id/textView64"
            android:layout_alignTop="@+id/textView64" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ph sensitive coating to not allow any release in the stomach \nto facilitate release only in the intestine for consumers."
            android:id="@+id/textView66"
            android:textColor="@color/black"
            android:layout_alignBottom="@+id/imageView47"
            android:layout_alignLeft="@+id/cap4_img"
            android:layout_alignStart="@+id/cap4_img" />
    </RelativeLayout>

</FrameLayout>

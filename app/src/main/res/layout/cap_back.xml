<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView33"
        android:scaleType="fitXY"
        android:src="@drawable/cap_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="(Capsaicin extract 100 mg beadlet, Caffine-140 mg, Niachin-140 mg and concentrated piperine extract 5 mg)"
        android:id="@+id/Cap_back_logo_txt"
        android:textColor="@color/black"
        android:layout_marginTop="99dp"
        android:layout_below="@+id/cap_back_head_txt"
        android:layout_toRightOf="@+id/prev_img"
        android:layout_toEndOf="@+id/prev_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Targeted reduction of \nVisceral Fat and Weight"
        android:id="@+id/cap_back_head_txt"
        android:layout_marginTop="55dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/Cap_back_logo_txt"
        android:layout_alignEnd="@+id/Cap_back_logo_txt"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prev_img"
        android:clickable="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="54dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/prev" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next_img"
        android:src="@drawable/next"
        android:clickable="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="54dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="12"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/text_no"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
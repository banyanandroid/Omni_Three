<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frag_cap4"
    android:background="@color/white"
    tools:context=".Fragment_1">

    <include layout="@layout/cap_back"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Developed using patented \ntarget delivery system"
            android:id="@+id/textView64"
            android:gravity="end"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/cap4_img"
            android:layout_toStartOf="@+id/cap4_img"
            android:layout_marginTop="339dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView47"
            android:src="@drawable/cap4_omni_img"
            android:layout_marginLeft="136dp"
            android:layout_marginStart="136dp"
            android:layout_below="@+id/textView64"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="(award winning technology)"
            android:id="@+id/textView65"
            android:textColor="@color/black"
            android:layout_below="@+id/imageView47"
            android:layout_alignRight="@+id/imageView47"
            android:layout_alignEnd="@+id/imageView47" />

        <ImageView
            android:layout_width="400dp"
            android:layout_height="270dp"
            android:id="@+id/cap4_img"
            android:clickable="true"
            android:src="@drawable/cap4_img2"
            android:layout_marginLeft="121dp"
            android:layout_marginStart="121dp"
            android:layout_alignBottom="@+id/textView65"
            android:layout_toRightOf="@+id/textView65"
            android:layout_toEndOf="@+id/textView65" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ph sensitive coating to not allow any release in the stomach \nto facilitate release only in the intestine for consumers."
            android:id="@+id/textView66"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_below="@+id/cap4_img"
            android:layout_alignLeft="@+id/cap4_img"
            android:layout_alignStart="@+id/cap4_img" />
    </RelativeLayout>

</FrameLayout>

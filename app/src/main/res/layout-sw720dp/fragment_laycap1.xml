            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/cap1_txt1"
            android:layout_below="@+id/cap1_img3"
            android:layout_toRightOf="@+id/cap1_img1"
            android:layout_toEndOf="@+id/cap1_img1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="TIME"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginLeft="8dp"
            android:id="@+id/cap1_txt2"
            android:layout_below="@+id/cap1_img3"
            android:layout_toRightOf="@+id/cap1_txt1"
            android:layout_toEndOf="@+id/cap1_txt1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="to take care of"
            android:layout_marginLeft="8dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="35sp"
            android:id="@+id/cap1_txt3"
            android:layout_alignBottom="@+id/cap1_txt2"
            android:layout_toRightOf="@+id/cap1_txt2"
            android:layout_toEndOf="@+id/cap1_txt2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="visceral fat"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="50sp"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:id="@+id/cap1_txt4"
            android:layout_below="@+id/cap1_txt1"
            android:layout_alignLeft="@+id/cap1_txt1"
            android:layout_alignStart="@+id/cap1_txt1"
            android:layout_alignRight="@+id/cap1_txt3"
            android:layout_alignEnd="@+id/cap1_txt3" />

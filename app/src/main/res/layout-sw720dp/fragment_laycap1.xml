<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frag_cap1"
    android:background="@color/white"
    tools:context=".Fragment_1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next_img"
            android:layout_marginRight="52dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/next"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView2"
            android:layout_alignBottom="@+id/next_img"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="600dp"
            android:layout_height="650dp"
            android:id="@+id/cap1_img1"
            android:layout_marginLeft="50dp"
            android:src="@drawable/cap1_img1"
            android:layout_alignParentTop="true"/>

        <ImageView
            android:layout_width="340dp"
            android:layout_height="230dp"
            android:id="@+id/cap1_img2"
            android:src="@drawable/cap1_img2"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/cap1_img1"
            android:layout_alignStart="@+id/cap1_img1"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_alignRight="@+id/cap1_img1"
            android:layout_alignEnd="@+id/cap1_img1" />

        <ImageView
            android:layout_width="590dp"
            android:layout_height="560dp"
            android:id="@+id/cap1_img3"
            android:src="@drawable/cap1_img3"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/next_img"
            android:layout_toStartOf="@+id/next_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frag_cap7img"
    android:background="@color/white"
    tools:context=".Fragment_1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Mechanism"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/cap7_headtxt"
            android:layout_above="@+id/cap7_txt"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Capsaicin stimulates catecholamine production by the TRPV1 receptor, which leads to an increased energy expenditure by stimulation of the sympathetic nervous system and the upregulation of UCPs. TRPV1, transient receptor potential vanilloid, SNS, sympathetic nervous system, UCP, uncoupling protein."
            android:id="@+id/cap7_txt"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/cap7_headtxt"
            android:layout_alignStart="@+id/cap7_headtxt" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cap7_img"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/cap7_img"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="90dp"
            android:layout_marginStart="90dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/cap7_headtxt"
            android:layout_toStartOf="@+id/cap7_headtxt" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prev_img"
            android:layout_alignBottom="@+id/cap7_img"
            android:layout_toRightOf="@+id/cap7_headtxt"
            android:layout_toEndOf="@+id/cap7_headtxt"
            android:layout_marginBottom="46dp"
            android:src="@drawable/prev" />
    </RelativeLayout>

</FrameLayout>

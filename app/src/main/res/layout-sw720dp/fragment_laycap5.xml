            android:text="Capsaicin-Thermogenic, Regulates appetitie, Helps burn visceral fat"
            android:id="@+id/cap5_txt1"
            android:textSize="35sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:layout_alignTop="@+id/cap5_bull1"
            android:layout_toRightOf="@+id/cap5_bull1"
            android:layout_toEndOf="@+id/cap5_bull1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cap5_bull2"
            android:layout_marginTop="8dp"
            android:paddingTop="3dp"
            android:layout_below="@+id/cap5_txt1"
            android:layout_alignLeft="@+id/cap5_bull1"
            android:layout_alignStart="@+id/cap5_bull1"
            android:src="@drawable/cap_red_arrow_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"

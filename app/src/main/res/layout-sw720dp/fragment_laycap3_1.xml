<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frag_cap3_1"
    android:background="@color/white"
    tools:context=".Fragment_1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView46"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/cap_back_img" />

        <ImageView
            android:layout_width="750dp"
            android:layout_height="500dp"
            android:id="@+id/imageView49"
            android:src="@drawable/cap_logo"
            android:scaleType="fitXY"
            android:layout_marginTop="75dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/prev_img"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="The First Cellular bioenergetic"
            android:id="@+id/cap5_txt3"
            android:textSize="33sp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:layout_gravity="left|center_vertical"
            android:layout_below="@+id/cap5_bull1"
            android:layout_toRightOf="@+id/prev_img"
            android:layout_toEndOf="@+id/prev_img" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="105dp"
            android:id="@+id/cap5_bull1"
            android:layout_marginTop="50dp"
            android:src="@drawable/cap_intro_img"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/imageView49"
            android:layout_alignStart="@+id/imageView49" />

        <TextView
            android:layout_width="410dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="(Capsaicin extract 100 mg beadlet, Caffine-140 mg, Niachin-140 mg and concentrated piperine extract 5 mg)"
            android:id="@+id/cap5_txt4"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/cap5_txt3"
            android:layout_alignStart="@+id/cap5_txt3"
            android:layout_marginLeft="58dp"
            android:layout_marginStart="58dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Targets Visceral"
            android:id="@+id/textView61"
            android:textSize="38dp"
            android:layout_marginRight="3dp"
            android:textColor="@color/black"
            android:layout_marginTop="45dp"
            android:layout_below="@+id/cap5_txt4"
            android:layout_alignRight="@+id/cap5_txt4"
            android:layout_alignEnd="@+id/cap5_txt4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Fat and Weight"
            android:id="@+id/textView62"
            android:textSize="38dp"
            android:textColor="@color/black"
            android:layout_below="@+id/textView61"
            android:layout_alignRight="@+id/textView61"
            android:layout_alignEnd="@+id/textView61" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Capsaicin \nClinically proven with > than 90 studies"
            android:id="@+id/textView63"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30sp"
            android:padding="10dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/yellow_bg_img"
            android:layout_alignBottom="@+id/textView62"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prev_img"
            android:src="@drawable/prev"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="54dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next_img"
            android:src="@drawable/next"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="54dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="4"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView56"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="105dp"
            android:id="@+id/imageView55"
            android:src="@drawable/omni_img"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</FrameLayout>
